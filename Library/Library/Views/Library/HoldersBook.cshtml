@model Library.Common.ViewModels.ListViewModel<Library.Common.ViewModels.ActiveHolderViewModel>
@{
    Layout = String.Empty;
}

@if (Model == null || Model.List.Count == 0)
{
    <tr>
        <th colspan="2">В данный момент книгой никто не пользуется</th>
    </tr>
}
else
{
    @foreach (var holder in Model.List)
    {
        <tr class="holderItem">
            <th>@holder.DateOfReceipt.ToShortDateString()</th>
            <th>@holder.User</th>
        </tr>
    }
    if (Model.NextExists)
    {

        <tr id="addholderTR">
            <th colspan="3"><button id="addHolders" class="btn btn-primary"> Показать ещё </button></th>
        </tr>

    }
}

