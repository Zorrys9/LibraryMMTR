@model Library.Common.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

    <script type="text/javascript" src="~/js/AccountScripts.js"></script>

    <div class="container reg">
        <br />
        <br />
        <br />
        <br />
        <form id="formRegistration">


            <div class="form-group">
                <label asp-for="SecondName">Фамилия</label>
                <input id="secondName" type="text" maxlength="50" class="form-control" name="SecondName" />
            </div>

            <div class="form-group">
                <label asp-for="FirstName">Имя</label>
                <input id="firstName" type="text" maxlength="50" class="form-control" name="FirstName" />
            </div>

            <div class="form-group">
                <label asp-for="Patronymic">Отчество</label>
                <input id="patronymic" type="text" maxlength="50" class="form-control" name="Patronymic" />
            </div>

            <div class="form-group">
                <label asp-for="Role">Роль</label>
                <select id="role" class="form-control" name="Role">
                    <option value="User">Пользователь</option>
                    <option value="Admin">Администратор</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber">Номер телефона</label>
                <input id="phone" type="text" class="form-control" name="PhoneNumber" />
            </div>

            <div  class="form-group">
                <label asp-for="Email">Email</label>
                <input id="email" type="text" class="form-control" name="Email" />
                <span id="emailError" class="hidden" style="color:red;"> Данный Email уже используется в системе</span>
                <span id="emailValidationError" class="hidden" style="color:red;"> Email введен не верно </span>
            </div>

            <div class="form-group">
                <label asp-for="Login"> Логин </label>
                <input id="login" type="text" maxlength="50" class="form-control" name="Login" />
                <span id="loginError" class="hidden" style="color:red;"> Данный логин уже используется в системе</span>
            </div>

            <div id="validationPasswordError" class="form-group">
                <label asp-for="Password">Пароль</label>
                <input id="password" type="password" maxlength="50" class="form-control" name="Password" />
                
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Повторите пароль</label>
                <input id="confirmPassword" type="password" maxlength="50" class="form-control" name="ConfirmPassword" />
                <span id="confirmedError" class="hidden" style="color:red;">Пароли не совпадают</span>
            </div>

        </form>

        <button id="register" class="btn btn-primary">Зарегистрироваться</button>
        <a class="btn btn-link float-right" asp-action="LogIn" asp-controller="Account">Отмена</a>

    </div>

